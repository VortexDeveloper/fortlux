<!-- Header logo -->
<div class="site-branding-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="logo">
                    <h1><a href="./"><figure id="logo" class="col-md-4 col-sm-3" data-hook>
                      <%= image_tag('logo.png') %>
                    </figure></a></h1>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="shopping-item">
                    <div class="" data-hook>
                      <div id="link-to-cart" data-hook>
                        <noscript>
                          <i class="fa fa-shopping-cart"></i>
                          <%= link_to Spree.t(:cart), '/cart' %>
                        </noscript>
                      </div>
                      <script>Spree.fetch_cart()</script>
                    </div>
